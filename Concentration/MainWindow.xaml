        </StackPanel>
        <StackPanel Grid.Column="1" Width="390" HorizontalAlignment="Right">
            <TextBlock Margin="10" Text="Concentration" FontWeight="Bold" FontSize="55" Foreground="GhostWhite"/>
            <TextBlock Margin="10" Name="Clicks" Text="# Clicks" FontWeight="Bold" FontSize="30" Foreground="GhostWhite"/>
            <TextBlock Margin="10" Name="Pairs" Text="# Pairs" FontWeight="Bold" FontSize="30" Foreground="GhostWhite"/>
            <TextBlock Margin="10" Text="High Score" FontWeight="Bold" FontSize="30" Foreground="GhostWhite"/>
            <TextBlock Margin="10" Name="HighScore" Text="High Score" FontWeight="Bold" FontSize="20" Foreground="GhostWhite"/>
            <TextBox Margin="10" Name="HighScoreName" Background="Black" BorderBrush="GhostWhite" FontSize="20" Visibility="Hidden" Foreground="GhostWhite"/>
            <Button Name="HighScoreSaveName" HorizontalAlignment="Center" Background="Black" BorderBrush="GhostWhite" Content="Save High Score" Foreground="GhostWhite" FontSize="20" Width="300" Click="HighScoreSaveName_Click" Visibility="Hidden"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="OptionsButton" Content="Options" Width="50" Margin="5" Click="OptionsButton_Click"/>
                <Button x:Name="DebugButton" Content="Debug" Width="50"  Margin="5" Click="DebugButton_Click"/>
                <Button x:Name="RulesButton" Content="Rules" Width="50"  Margin="5" Click="RulesButton_Click"/>
            </StackPanel>
            <StackPanel x:Name="Options" Visibility="Visible" Width="200">
                <Label Margin="0 10 0 0" Foreground="White">Pick a theme</Label>    
                <TextBlock Text="This will end your current game." Foreground="White" TextWrapping="Wrap" FontWeight="Thin"/>
                <ComboBox x:Name="ThemeSelector" Margin="10" Focusable="False" IsReadOnly="True" Text="Select a Theme" Width="150">
                    <ComboBoxItem x:Name="Default" Selected="Default_Selected">
                        <DockPanel>
                            <Image Source="images/cards/basic/back.jpg" Height="50"/>
                            <TextBlock Text="Default Cards" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        </DockPanel>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="Dolphins" Selected="Dolphins_Selected">
                        <DockPanel>
                            <Image Source="images/cards/dolphin/back.jpg" Height="50"/>
                            <TextBlock Text="Dolphin Cards" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        </DockPanel>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="Animals" Selected="Animals_Selected">
                        <DockPanel>
                            <Image Source="images/cards/animal/back.jpg" Height="50"/>
                            <TextBlock Text="Animal Cards" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        </DockPanel>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="Flowers" Selected="Flowers_Selected">
                        <DockPanel>
                            <Image Source="images/cards/flowers/back.jpg" Height="50"/>
                            <TextBlock Text="Flower Cards" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        </DockPanel>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="Sealife" Selected="Sealife_Selected">
                        <DockPanel>
                            <Image Source="images/cards/sealife/back.jpg" Height="50"/>
                            <TextBlock Text="Sealife Cards" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        </DockPanel>
                    </ComboBoxItem>
                </ComboBox>
                <Label Margin="0 10 0 0" Foreground="White">Clear High Scores</Label>
                <Button Name="ClearHighScores" Content="Clear High Score" Click="ClearHighScores_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="10"/>
                <Label Margin="0 10 0 0" Foreground="White">Wait Time</Label>
                <TextBlock Text="Here you can change the time that the cards are shown before being turned back over." Foreground="White" TextWrapping="Wrap" FontWeight="Thin"/>

                <ComboBox Name="SetWaitTime" Width="150" Height="30" HorizontalAlignment="Center" Margin="10">
                    <ComboBoxItem Content="Half a Second" x:Name="HalfSecond" Selected="HalfSecond_Selected"/>
                    <ComboBoxItem Content="A Second" x:Name="OneSecond" Selected="OneSecond_Selected"/>
                    <ComboBoxItem Content="One and a Half Seconds" x:Name="OneHalfSecond" Selected="OneHalfSecond_Selected"/>
                    <ComboBoxItem Content="Two Seconds" x:Name="TwoSecond" Selected="TwoSecond_Selected"/>
                    <ComboBoxItem Content="Two and a Half Seconds" x:Name="TwoHalfSecond" Selected="TwoHalfSecond_Selected"/>
                    <ComboBoxItem Content="Three Seconds" x:Name="ThreeSecond" Selected="ThreeSecond_Selected"/>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="Debug" Visibility="Collapsed">
                <TextBlock Margin="5" Name="DebugCard1" Text="Irrelevant" Foreground="GhostWhite"/>
                <TextBlock Margin="5" Name="DebugCard2" Text="Irrelevant" Foreground="GhostWhite"/>
                <Button Name="UncoverCards" Content="Uncover Cards" Click="UncoverCards_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                <Button Name="ShowNumbers" Content="Show Numbers" Click="ShowNumbers_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                <Button Name="Random" Content="Random Number" Click="Random_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                <Grid Height="60" Width="100" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Foreground="White" x:Name="tb1" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Foreground="White" x:Name="tb2" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock Foreground="White" x:Name="tb3" Grid.Row="0" Grid.Column="2"/>
                    <TextBlock Foreground="White" x:Name="tb4" Grid.Row="0" Grid.Column="3"/>
                    <TextBlock Foreground="White" x:Name="tb5" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Foreground="White" x:Name="tb6" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Foreground="White" x:Name="tb7" Grid.Row="1" Grid.Column="2"/>
                    <TextBlock Foreground="White" x:Name="tb8" Grid.Row="1" Grid.Column="3"/>
                    <TextBlock Foreground="White" x:Name="tb9" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Foreground="White" x:Name="tb10" Grid.Row="2" Grid.Column="1"/>
                    <TextBlock Foreground="White" x:Name="tb11" Grid.Row="2" Grid.Column="2"/>
                    <TextBlock Foreground="White" x:Name="tb12" Grid.Row="2" Grid.Column="3"/>
                    <TextBlock Foreground="White" x:Name="tb13" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Foreground="White" x:Name="tb14" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Foreground="White" x:Name="tb15" Grid.Row="3" Grid.Column="2"/>
                    <TextBlock Foreground="White" x:Name="tb16" Grid.Row="3" Grid.Column="3"/>
                </Grid>
            </StackPanel>
            <StackPanel x:Name="Rules" Visibility="Collapsed">
                <TextBlock Margin="10" Text="There are 8 pairs of cards on the game table, face down. Turn over two cards at a time. If you uncover a pair they will remain uncovered. Your goal is to find all of the pairs." FontWeight="DemiBold" FontSize="20" Foreground="GhostWhite" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
        <Rectangle x:Name="Shield" Margin="0,0,0,0" Fill="Black" Opacity="0.2" Visibility="Hidden" Panel.ZIndex="5"/>
    </Grid>

</Window>
