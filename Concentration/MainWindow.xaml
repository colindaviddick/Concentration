                                            <TextBlock Text="Sealife Cards" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="Black"/>
                                        </DockPanel>
                                    </ComboBoxItem>
                                </ComboBox>

                                <Line Margin="2" Stroke="White" Height="3" Width="200" HorizontalAlignment="Center" OpacityMask="White" UseLayoutRounding="False" X2="200">
                                    <Line.Fill>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                                    </Line.Fill>
                                </Line>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="OptionsButton" Content="Options" Width="50" Margin="5" Click="OptionsButton_Click"/>
                                    <Button x:Name="DebugButton" Content="Debug" Width="50"  Margin="5" Click="DebugButton_Click" Visibility="Collapsed"/>
                                    <Button x:Name="RulesButton" Content="Rules" Width="50"  Margin="5" Click="RulesButton_Click"/>
                                    <Button x:Name="AboutButton" Content="About" Width="50"  Margin="5" Click="AboutButton_Click"/>
                                </StackPanel>
                                <StackPanel x:Name="Options" Visibility="Visible" Width="300">
                                    <TextBlock Margin="2" FontSize="20" Foreground="White" Text="Options" HorizontalAlignment="Center" TextDecorations="Underline"/>
                                    <Label Margin="0 10 0 0" Foreground="White">Clear High Scores</Label>
                                    <TextBlock Margin="5 0 5 0" Text="Click to reset high score." TextWrapping="Wrap" FontWeight="Thin"/>
                                    <Button Name="ClearHighScores" Content="Clear High Score" Click="ClearHighScores_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="10"/>
                                    <Label Margin="0 10 0 0" Foreground="White">Wait Time</Label>
                                    <TextBlock Margin="5 0 5 0" Text="Here you can change the time that the cards are shown before being turned back over." TextWrapping="Wrap" FontWeight="Thin"/>

                                    <ComboBox Name="SetWaitTime" Width="150" Height="30" HorizontalAlignment="Center" Margin="10">
                                        <ComboBoxItem Content="Half a Second" x:Name="HalfSecond" Selected="HalfSecond_Selected"/>
                                        <ComboBoxItem Content="A Second" x:Name="OneSecond" Selected="OneSecond_Selected"/>
                                        <ComboBoxItem Content="One and a Half Seconds" x:Name="OneHalfSecond" Selected="OneHalfSecond_Selected"/>
                                        <ComboBoxItem Content="Two Seconds" x:Name="TwoSecond" Selected="TwoSecond_Selected"/>
                                        <ComboBoxItem Content="Two and a Half Seconds" x:Name="TwoHalfSecond" Selected="TwoHalfSecond_Selected"/>
                                        <ComboBoxItem Content="Three Seconds" x:Name="ThreeSecond" Selected="ThreeSecond_Selected"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel x:Name="Debug" Visibility="Collapsed">
                                    <TextBlock Margin="2" FontSize="20" Foreground="White" Text="Debug Menu" HorizontalAlignment="Center" TextDecorations="Underline"/>
                                    <TextBlock Margin="5" Name="DebugCard1" Text="Irrelevant" />
                                    <TextBlock Margin="5" Name="DebugCard2" Text="Irrelevant" />
                                    <Button Name="UncoverCards" Content="Uncover Cards" Click="UncoverCards_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                                    <Button Name="ShowNumbers" Content="Show Numbers" Click="ShowNumbers_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                                    <Button Name="Random" Content="Random Number" Click="Random_Click" Width="100" Height="30" HorizontalAlignment="Center" Margin="2"/>
                                    <Grid Height="60" Width="100" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15"></RowDefinition>
                                            <RowDefinition Height="15"></RowDefinition>
                                            <RowDefinition Height="15"></RowDefinition>
                                            <RowDefinition Height="15"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Foreground="White" x:Name="tb1" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Foreground="White" x:Name="tb2" Grid.Row="0" Grid.Column="1"/>
                                        <TextBlock Foreground="White" x:Name="tb3" Grid.Row="0" Grid.Column="2"/>
                                        <TextBlock Foreground="White" x:Name="tb4" Grid.Row="0" Grid.Column="3"/>
                                        <TextBlock Foreground="White" x:Name="tb5" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Foreground="White" x:Name="tb6" Grid.Row="1" Grid.Column="1"/>
                                        <TextBlock Foreground="White" x:Name="tb7" Grid.Row="1" Grid.Column="2"/>
                                        <TextBlock Foreground="White" x:Name="tb8" Grid.Row="1" Grid.Column="3"/>
                                        <TextBlock Foreground="White" x:Name="tb9" Grid.Row="2" Grid.Column="0"/>
                                        <TextBlock Foreground="White" x:Name="tb10" Grid.Row="2" Grid.Column="1"/>
                                        <TextBlock Foreground="White" x:Name="tb11" Grid.Row="2" Grid.Column="2"/>
                                        <TextBlock Foreground="White" x:Name="tb12" Grid.Row="2" Grid.Column="3"/>
                                        <TextBlock Foreground="White" x:Name="tb13" Grid.Row="3" Grid.Column="0"/>
                                        <TextBlock Foreground="White" x:Name="tb14" Grid.Row="3" Grid.Column="1"/>
                                        <TextBlock Foreground="White" x:Name="tb15" Grid.Row="3" Grid.Column="2"/>
                                        <TextBlock Foreground="White" x:Name="tb16" Grid.Row="3" Grid.Column="3"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel x:Name="Rules" Visibility="Collapsed">
                                    <TextBlock Margin="2" FontSize="20" Foreground="White" Text="Rules" HorizontalAlignment="Center" TextDecorations="Underline"/>
                                    <TextBlock Margin="10" Text="There are 8 pairs of cards on the game table, face down. Turn over two cards at a time. If you uncover a pair they will remain uncovered. Your goal is to find all of the pairs." TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel x:Name="About" Visibility="Collapsed">
                                    <TextBlock Margin="2" FontSize="20" Foreground="White" Text="About" HorizontalAlignment="Center" TextDecorations="Underline"/>
                                    <TextBlock Margin="10" TextWrapping="Wrap">
                    Concentration was made by Colin Dick. <LineBreak/><LineBreak/>All of the photos are labelled as CC0 and therefore free to use. If this is not the case, the photos are yours and you would like them removed from the game please contact me at <Hyperlink NavigateUri="colindaviddick@gmail.com">colindaviddick@gmail.com</Hyperlink>
                    <LineBreak/>
                    <LineBreak/>
                    <Button x:Name="ActivateDebugMode" Content="Debug Mode" HorizontalAlignment="Center" Click="ActivateDebugMode_Click"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Border>
                    <Rectangle x:Name="Shield" Margin="0,0,0,0" Opacity="0.6" Visibility="Hidden" Panel.ZIndex="5">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleY="1.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform x:Name="ShieldTurn" Angle="-47.291" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF1A2C2C" Offset="0"/>
                                <GradientStop Color="#001A2C2C" Offset="0.05"/>
                                <GradientStop Color="#FF1A2C2C" Offset="0.1"/>
                                <GradientStop Color="#001A2C2C" Offset="0.2"/>
                                <GradientStop Color="#FF1A2C2C" Offset="0.3"/>
                                <GradientStop Color="#001A2C2C" Offset="0.4"/>
                                <GradientStop Color="#FF1A2C2C" Offset="0.5"/>
                                <GradientStop Color="#001A2C2C" Offset="0.6"/>
                                <GradientStop Color="#FF1A2C2C" Offset="0.7"/>
                                <GradientStop Color="#001A2C2C" Offset="0.8"/>
                                <GradientStop Color="#FF1A2C2C" Offset="0.9"/>
                                <GradientStop Color="#001A2C2C" Offset="0.95"/>
                                <GradientStop Color="#FF1A2C2C" Offset="1"/>

                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Border>
        </Border>
    </Border>
</Window>
